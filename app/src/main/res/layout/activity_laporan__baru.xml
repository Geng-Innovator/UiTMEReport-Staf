<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seladanghijau.uitme_reportstaf.Laporan_Baru">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgReport"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtTempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Tempat"/>

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/edtNoKenderaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="No. Kenderaan"/>

            <EditText
                android:id="@+id/edtSiriPelekat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="No. Siri Pelekat"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kenderaan : " />

                <RelativeLayout
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/spnJenisKenderaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/edtPenerangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:minHeight="200dp"
                android:hint="Penerangan"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <Button
                android:onClick="onClick"
                android:id="@+id/btnMuatGambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MUAT NAIK GAMBAR" />

            <Button
                android:onClick="onClick"
                android:id="@+id/btnHantar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HANTAR" />

            <Button
                android:onClick="onClick"
                android:id="@+id/btnBatal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BATAL" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
